<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.PlaceholderFragmentTasks.PlaceholderFragment_Task_0101">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="Выберите, что содержит двоичная запись числа нули/единици, их количесвто и сисему счисления искомого числа: "
            android:textSize="15sp" />


        <RadioGroup
            android:id="@+id/task0101_rg_choice_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="Единицы"
                android:textColor="#0A0A0A"
                android:textSize="15sp"
                android:layout_marginRight="8dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="Нули"
                android:textColor="#0A0A0A"
                android:textSize="15sp" />

        </RadioGroup>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/task0101_edittext_count_values_one_or_zero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Введите количество нулей/единиц"
            android:inputType="number"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Количество нулей/единиц"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Введите систему счисления искомого числа"
            android:inputType="number"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Система счисления"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="Укажите какое искомое число:"
            android:textSize="15dp"
            />
        <RadioGroup
            android:id="@+id/task0101_rg_choice_min_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <RadioButton
                android:id="@+id/task0101_rbtn_min_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="Минимально"
                android:textSize="15sp"
                android:layout_marginRight="8dp"/>

            <RadioButton
                android:id="@+id/task0101_rbtn_max_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="Максимальное"
                android:textSize="15sp" />

        </RadioGroup>
        <TextView
            android:id="@+id/task0101_textview_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <Button
            android:id="@+id/task0101_btn_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="решить"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </LinearLayout>

</LinearLayout>