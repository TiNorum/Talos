<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.PlaceholderFragmentTasks.PlaceholderFragment_Task_0615">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="15dp"
        >

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/task0615_edittext_biuld_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Укажите такое наименьшее число (N или R)"
            android:maxLength="3"
            style="@style/task_input"
            android:inputType="number"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Строится число" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/task0615_editext_answer_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="3"
            style="@style/task_input"
            android:hint="Число в ответе"
            android:inputType="number"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="В ответе" />

        <TextView
            android:id="@+id/task0615_text_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/task0615_btn_answer"
            android:layout_width="match_parent"
            style="@style/task_buttons_field"
            android:background="@drawable/btn_task_send"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:text="@string/decide" />
    </LinearLayout>
</RelativeLayout>