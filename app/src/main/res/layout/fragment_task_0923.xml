<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editText2_task23"
        style="@style/task_input"
        android:layout_width="110dp"
        android:layout_height="47dp"
        android:layout_margin="5dp"
        android:hint="Введите число раз"
        android:inputType="number"
        android:maxLength="15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2_task23"
        app:met_floatingLabel="highlight" />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editText3_task23"
        style="@style/task_input"
        android:layout_width="110dp"
        android:layout_height="47dp"
        android:layout_margin="5dp"
        android:hint="Введите число раз"
        android:inputType="number"
        android:maxLength="15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3_task23"
        app:met_floatingLabel="highlight" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editText1_task23"
        style="@style/task_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="8dp"
        android:hint="Введите число секунд"
        android:inputType="number"
        android:maxLength="15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1_task23"
        app:met_floatingLabel="highlight" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editText4_task23"
        style="@style/task_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Введите число секунд"
        android:inputType="number"
        android:maxLength="15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4_task23"
        app:met_floatingLabel="highlight" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="276dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/editText2_task23"
        app:layout_constraintTop_toBottomOf="@+id/textView2_task23">

        <RadioButton
            android:id="@+id/checkBox1_task23"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Выше" />

        <RadioButton
            android:id="@+id/checkBox2_task23"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ниже" />

    </RadioGroup>

    <RadioGroup
        android:layout_width="276dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/editText3_task23"
        app:layout_constraintTop_toBottomOf="@+id/textView3_task23">

        <RadioButton
            android:id="@+id/checkBox3_task23"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Выше" />

        <RadioButton
            android:id="@+id/checkBox4_task23"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ниже" />

    </RadioGroup>
    <TextView
        android:id="@+id/answertext_task23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Ответ"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/buttonAnswer_task23"
        app:layout_constraintStart_toEndOf="@+id/buttonAnswer_task23"
        app:layout_constraintTop_toTopOf="@+id/buttonAnswer_task23"
        app:layout_constraintVertical_bias="0.161" />

    <Button
        android:id="@+id/buttonAnswer_task23"
        android:layout_width="102dp"
        android:layout_height="45dp"
        android:layout_marginStart="36dp"
        android:text="Решить"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText4_task23" />

    <TextView
        android:id="@+id/textView1_task23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        style="@style/task_question"
        android:text="Укажите время, за которое был передан файл:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3_task23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Укажите частоту, повторной дискретизации:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2_task23" />
    <TextView
        android:id="@+id/textView4_task23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Укажите время, за которое был передан файл:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText3_task23" />

    <TextView
        android:id="@+id/textView2_task23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Введите разрешение повторной оцифрации:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText1_task23" />
</androidx.constraintlayout.widget.ConstraintLayout>