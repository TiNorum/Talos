<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingRight="15dp"
        android:orientation="vertical">


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/task1035_edittext_count_symbols_in_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Укажите длину слова"
            android:inputType="number"
            android:maxLength="2"
            app:met_floatingLabel="highlight"
            style="@style/task_input"
            app:met_floatingLabelText="Длина слова" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/task1035_edittext_symbols"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/task_input"
            android:digits="йцукенгшщзхфывапролджэячсмитьбюЙЦУКЕНГШЩЗФЫВАПРОЛДЯЧСМИТЬ"
            android:hint="Введите буквы подряд без пробелов"
            android:singleLine="true"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Буквы" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="@style/task_question"
            android:text="Введите букву и через '-' ее количество повторений " />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/task1035_edittext_count_symbols"
            android:layout_width="match_parent"
            style="@style/task_input"
            android:layout_height="wrap_content"
            android:hint="У скольких букв ограничено чилсо повторений"/>

        <LinearLayout
            android:id="@+id/task1035_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/task1035_text_answer"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/task1035_btn_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/task_buttons_field"
            android:background="@drawable/btn_task_send"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="20dp"
            android:text="@string/decide" />

    </LinearLayout>
</RelativeLayout>