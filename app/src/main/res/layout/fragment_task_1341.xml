<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/task1341_count_symbol_in_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Количество символов в пароле"
            app:met_floatingLabel="highlight" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/task1341_count_symbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Количество используемых символов"
            app:met_floatingLabel="highlight" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/task1341_count_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Количество пользователей"
            app:met_floatingLabel="highlight" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/task1341_add_inf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Доп. сведенья"
            app:met_floatingLabel="highlight" />



        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/task1341_count_all_byte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Всего байт"
            app:met_floatingLabel="highlight" />

        <TextView
            android:id="@+id/task1341_text_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/task1341_btn_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Решить"
            />
    </LinearLayout>

</RelativeLayout>