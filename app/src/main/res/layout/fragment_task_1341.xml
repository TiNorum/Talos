<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/task1341_count_symbol_in_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/task_input"
            android:maxLength="2"
            android:singleLine="true"
            android:inputType="number"
            android:hint="Количество символов в пароле"
            app:met_floatingLabel="highlight" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/task1341_count_symbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/task_input"
            android:maxLength="2"
            android:singleLine="true"
            android:inputType="number"
            android:hint="Количество используемых символов"
            app:met_floatingLabel="highlight" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/task1341_count_users"
            android:layout_width="match_parent"
            style="@style/task_input"
            android:layout_height="wrap_content"
            android:hint="Количество пользователей"
            android:maxLength="2"
            android:singleLine="true"
            android:inputType="number"
            app:met_floatingLabel="highlight" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/task1341_add_inf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/task_input"
            android:maxLength="10"
            android:singleLine="true"
            android:inputType="number"
            android:hint="Дополнительные сведения"
            app:met_floatingLabel="highlight" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/task1341_count_all_byte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/task_input"
            android:maxLength="10"
            android:singleLine="true"
            android:inputType="number"
            android:hint="Всего байт"
            app:met_floatingLabel="highlight" />

        <TextView
            android:id="@+id/task1341_text_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/task1341_btn_answer"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/btn_task_send"
            android:layout_height="wrap_content"
            style="@style/task_buttons_field"
            android:text="Решить"
            />
    </LinearLayout>

</RelativeLayout>