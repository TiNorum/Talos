<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingTop="20dp"
    android:paddingRight="15dp"
    tools:context=".UI.PlaceholderFragmentTasks.PlaceholderFragment_Task_1442">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/task_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите из каких цифр состоит строка:" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edittext_number"
            style="@style/task_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите цифру"
            android:inputType="number"
            android:maxLength="1"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Введите число" />

        <TextView
            style="@style/task_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Введите количество этих цифр:" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edittext_count_number"
            style="@style/task_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите число"
            android:inputType="number"
            android:maxLength="4"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Введите число" />

        <TextView
            style="@style/task_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:gravity="left"
            android:text="Напишите код:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                style="@style/task_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="НАЧАЛО"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    style="@style/task_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:text="ПОКА нашлось (" />

                <EditText
                    android:id="@+id/edittext_find_first"
                    style="@style/task_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textSize="12sp" />

                <TextView
                    style="@style/task_question"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text=") ИЛИ нашлось (" />

                <TextView
                    style="@style/task_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="" />

                <EditText
                    android:id="@+id/edittext_find_second"
                    style="@style/task_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:inputType="number"
                    android:maxLength="6"
                    android:text=""
                    android:textSize="12sp" />

                <TextView
                    style="@style/task_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=")" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/task_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ЕСЛИ нашлось ("
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edittext_find_if"
                    style="@style/task_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textSize="12sp" />

                <TextView
                    style="@style/task_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=")"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/task_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ТО заменить ("
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edittext_replace"
                    style="@style/task_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textSize="12sp" />

                <TextView
                    style="@style/task_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" , " />

                <EditText
                    android:id="@+id/edittext_replace_yes"
                    style="@style/task_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textSize="12sp" />

                <TextView
                    style="@style/task_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" )"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/task_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ИНАЧЕ заменить ("
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edittext_replace_else"
                    style="@style/task_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textSize="12sp" />

                <TextView
                    style="@style/task_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" , " />

                <EditText
                    android:id="@+id/edittext_replace_no"
                    style="@style/task_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textSize="12sp" />

                <TextView
                    style="@style/task_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" )"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                style="@style/task_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="КОНЕЦ ЕСЛИ"
                android:textSize="12sp" />

            <TextView
                style="@style/task_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="КОНЕЦ ПОКА"
                android:textSize="12sp" />

            <TextView
                style="@style/task_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="КОНЕЦ"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/task1442_textview_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <Button
            android:id="@+id/task1442_btn_answer"
            style="@style/task_buttons_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/btn_task_send"
            android:gravity="center"
            android:text="@string/decide" />
    </LinearLayout>


</LinearLayout>

