<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/comfortaa_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    // Task styles

    <style name="task_buttons_field">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="task_buttons_43">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="task_bar">
        <item name="fontFamily">@font/kb_danube</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="buttons_number_list">
        <item name="fontFamily">@font/comfortaa_bold</item>
        <item name="android:textColor">@color/turquoise_light</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="authreg_input">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="met_textColorHint">@color/white</item>
        <item name="met_baseColor">@color/white</item>
        <item name="met_underlineColor">@color/white</item>
        <item name="fontFamily">@font/comfortaa_bold</item>
    </style>

    <style name="task_input">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="met_textColorHint">@color/black</item>
        <item name="met_underlineColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>
    
    <style name="task_question">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="met_textColorHint">@color/black</item>
        <item name="met_underlineColor">@color/black</item>
        <item name="fontFamily">@font/comfortaa_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>