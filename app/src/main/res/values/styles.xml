<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    // Task styles

    <style name="task_buttons_field">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="task_bar">
        <item name="fontFamily">@font/soupofjustice</item>
    </style>

    <style name="buttons_number_list">
        <item name="fontFamily">@font/comfortaa_bold</item>
        <item name="android:textColor">@color/turquoise</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="task_input">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="met_textColorHint">@color/black</item>
        <item name="met_underlineColor">@color/black</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="task_question">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="met_textColorHint">@color/black</item>
        <item name="met_underlineColor">@color/black</item>
        <item name="fontFamily">@font/comfortaa_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>